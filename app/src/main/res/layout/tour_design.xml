<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/tourCoverIV"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/sylhet" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Name"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/tourNameTV"
            android:background="@color/white"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_below="@id/tourCoverIV">
        <Button
            android:id="@+id/detailsBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_weight="2"
            android:onClick="details"/>
            <Button
                android:id="@+id/momentsBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moments"
                android:layout_weight="2"
                />
            <Button
                android:id="@+id/deleteBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#9E1313"
                android:layout_weight="2"
                android:onClick="Delete"
                />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>